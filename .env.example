# === REQUIRED VARIABLES ===

# Database connection string
DATABASE_URL=

# Authentication secret - can be any random string for local development
BETTER_AUTH_SECRET=localhost-secret

# URL to your authentication service
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# S3 Storage Configuration - required for file uploads
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
NEXT_PUBLIC_CDN_URL=

# Google OAuth configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Imgur API for image uploads
NEXT_PUBLIC_IMGUR_CLIENT_ID=

# Admin webhook security token
ADMIN_WEBHOOK_TOKEN=

# === ANALYTICS CONFIGURATION ===

# Plausible Analytics configuration
PLAUSIBLE_API_KEY=
PLAUSIBLE_HOST=
PLAUSIBLE_SITE_ID=

# === EMAILS ===

ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=

# === OPTIONAL VARIABLES ===

# File upload restrictions (comma-separated file extensions)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=jpg,png,pdf,docx

# Maximum file size in bytes (default: 5MB = 5242880)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
